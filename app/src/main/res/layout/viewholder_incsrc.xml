<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:layout_marginTop="4sp"
    android:background="@drawable/view_holder_background"
    android:id="@+id/ConstLayout"
    android:layout_marginBottom="4sp">
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/incc"/>
    <TextView
        android:id="@+id/IncomeLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:hint="Desc"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logoImg"
        app:layout_constraintTop_toTopOf="@+id/logoImg" />


    <TextView
        android:layout_width="80sp"
        android:layout_height="55sp"
        android:id="@+id/priority_one"
        android:text="Type"
        android:gravity="center"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#19FD23"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        app:layout_constraintLeft_toRightOf="@id/amount"
        app:layout_constraintTop_toTopOf="@id/amount" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="96sp"
        android:text="20000"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IncomeLoss" />

    <TextView
        android:id="@+id/StartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="16sp"
        android:text="25th May 2023"
        android:textColor="#fff"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/logoImg"
        app:layout_constraintTop_toBottomOf="@id/IncomeLoss" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EndDate"
        app:layout_constraintTop_toBottomOf="@id/IncomeLoss"
        app:layout_constraintLeft_toRightOf="@id/logoImg"
        android:layout_marginStart="8sp"
        android:text="25th May 2023"
        android:textSize="13sp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144sp"
        android:layout_marginTop="12sp"
        android:text="Equity"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/logoImg"
        app:layout_constraintTop_toBottomOf="@id/amount" />

</androidx.constraintlayout.widget.ConstraintLayout>